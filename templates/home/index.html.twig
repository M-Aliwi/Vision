{% extends 'base.html.twig' %}

{% block title %}Vision{% endblock %}


{% block body %}
   <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Tooplate Style Bootstrap Template</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>


  <!-- Cards Section -->
  <section class="py-5">
    <div class="container-fluid">
      <div class="row g-4">
           {% for post in posts %}
        <div class="col-md-3">

          <div class="card">
            <img src="{{ asset(post.url) }}" class="card-img-top" alt="Template 1">
            <div class="card-body">
              <h5 class="card-title">{{ post.discription }}</h5>
            </div>
          </div>

      </div>
         {% endfor %}
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-4">
    <div class="container">
      <p class="mb-0">&copy; 2025 Tooplate. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS (for navbar toggle) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



{% endblock %}
