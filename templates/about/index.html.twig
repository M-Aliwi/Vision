{% extends 'base.html.twig' %}

{% block title %}Vision | About Us{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 mb-4">About Vision</h1>
            <p class="lead text-muted">
                Vision is a platform where creativity meets community. We're dedicated to providing a space where visual storytellers can share their work and inspire others.
            </p>
        </div>
    </div>

    <!-- Mission Section -->
    <div class="row mb-5">
        <div class="col-md-6">
            <h2 class="h3 mb-4">Our Mission</h2>
            <p class="mb-4">
                At Vision, we believe in the power of visual storytelling. Our mission is to create a platform where artists, photographers, and creators can share their work with a global community, fostering inspiration and creativity.
            </p>
            <p>
                We're committed to building a safe, inclusive space where everyone can express themselves through visual content, connect with like-minded individuals, and discover new perspectives.
            </p>
        </div>
        <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <h3 class="h4 mb-4">Our Values</h3>
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex align-items-center">
                            <i class="bi bi-heart-fill text-danger me-3 fs-4"></i>
                            <span>Creativity and Innovation</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center">
                            <i class="bi bi-people-fill text-primary me-3 fs-4"></i>
                            <span>Community and Connection</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center">
                            <i class="bi bi-shield-check text-success me-3 fs-4"></i>
                            <span>Safety and Trust</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center">
                            <i class="bi bi-globe text-info me-3 fs-4"></i>
                            <span>Global Perspective</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="h3">Our Team</h2>
            <p class="text-muted">The passionate people behind Vision</p>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-light mx-auto mb-3" style="width: 120px; height: 120px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-person-circle fs-1 text-muted"></i>
                    </div>
                    <h3 class="h5 mb-2">John Doe</h3>
                    <p class="text-muted mb-3">Founder & CEO</p>
                    <p class="small">Passionate about creating spaces where creativity can flourish.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-light mx-auto mb-3" style="width: 120px; height: 120px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-person-circle fs-1 text-muted"></i>
                    </div>
                    <h3 class="h5 mb-2">Jane Smith</h3>
                    <p class="text-muted mb-3">Head of Design</p>
                    <p class="small">Dedicated to creating beautiful and intuitive user experiences.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-light mx-auto mb-3" style="width: 120px; height: 120px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-person-circle fs-1 text-muted"></i>
                    </div>
                    <h3 class="h5 mb-2">Mike Johnson</h3>
                    <p class="text-muted mb-3">Lead Developer</p>
                    <p class="small">Building the technology that powers creative expression.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <i class="bi bi-people-fill text-primary fs-1 mb-3"></i>
                    <h3 class="h2 mb-2">10K+</h3>
                    <p class="text-muted mb-0">Active Users</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <i class="bi bi-image-fill text-success fs-1 mb-3"></i>
                    <h3 class="h2 mb-2">50K+</h3>
                    <p class="text-muted mb-0">Pins Shared</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <i class="bi bi-globe text-info fs-1 mb-3"></i>
                    <h3 class="h2 mb-2">100+</h3>
                    <p class="text-muted mb-0">Countries</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 