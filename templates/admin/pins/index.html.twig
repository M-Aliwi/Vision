{% extends 'base.html.twig' %}

{% block title %}Manage Pins | Admin{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="h4 mb-0">Manage Pins</h2>
                            <a href="{{ path('admin_pins_new') }}" class="btn btn-success">
                                <i class="bi bi-plus-lg"></i> New Pin
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;">ID</th>
                                        <th style="width: 120px;">Image</th>
                                        <th>Description</th>
                                        <th style="width: 200px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for pin in pins %}
                                        <tr>
                                            <td>{{ pin.id }}</td>
                                            <td>
                                                <img src="/{{ pin.URL }}" alt="Pin image" class="img-thumbnail" style="max-width: 100px; height: auto;">
                                            </td>
                                            <td>{{ pin.discription }}</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_pins_edit', {id: pin.id}) }}" class="btn btn-primary btn-sm">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <form method="post" action="{{ path('admin_pins_delete', {id: pin.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this pin?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pin.id) }}">
                                                        <button class="btn btn-danger btn-sm">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center py-4">
                                                <div class="text-muted">
                                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                                    No pins found
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }
        .btn-group {
            gap: 0.5rem;
        }
        .btn-group .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
    </style>
{% endblock %} 